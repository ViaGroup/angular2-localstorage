{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSources": true,
		"declaration": true,
		"lib": [
			"dom",
			"es6"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"types": []
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"index.d.ts",
		"dist"
	]
}